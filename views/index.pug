html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Investor Ledger
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' crossorigin='anonymous')

    style
      include ../public/index.css
  body
    div(class='container text-center')
      div(class='row')
        h1 Investing Account
          

      div(class='row') 
        div(class='col')
          div(class='jumbotron')
            - var balanceString = `Balance: $${balance}`
            h1= balanceString
            div(class='small')
              - var dateRange = `Transactions from ${startDate} to ${endDate}`
              = dateRange

      div(class='content table-responsive-sm')
      table(class='table')
        thead(class='thead-dark')
          th Date
          th Type
          th Description
          th Amount
          th Balance

        tbody
          each val in transactions
            tr
              th= val.date
              th= val.type
              th= val.description
              th= val.amount
              th= val.balance
    

    
